@model ASUProjectSubmission.Models.Student
@{
    ViewData["Title"] = "Home Page";
}


<div class="container">
    <div class="col-md-2"></div>
    <div class="col-md-8">

        <!-- start home page content -->

        <div class="row">                     
            <img src="~/images/asu_logo_2.png" class="asuLogo" />
        </div>
        <div style="height: 20px;"></div>
        <div class="panel panel-info">
            <div class="panel-heading">
                <strong>CIS105 Data Science API Submission</strong>
            </div>
            <div class="panel-body">
                @if (Context.Request.Query["msg"] == "notfound")
                {
                    <div class="alert alert-danger" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong>Not Found!</strong> Your Student ID was not found.
                    </div>
                }
                Please use the form below to search for your student record and submit your work.
                <div style="height: 15px;"></div>
                <form asp-action="SearchByASUStudentId" asp-controller="Students">
                    <div class="form-group">
                        <input type="number" class="form-control" placeholder="Student Id" asp-for="ASUStudentId" />
                    </div>
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
            </div>
            <div class="panel-footer">

            </div>
        </div>

        <!-- /end home page content -->

    </div>
    <div class="col-md-2"></div>
</div>
